{
  "name": "Jekyll Academic Site",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "rebornix.Ruby",
    "yzhang.markdown-all-in-one",
    "esbenp.prettier-vscode"
  ],
  "postCreateCommand": "bundle install",
  "forwardPorts": [4000],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll server",
      "onAutoForward": "openBrowser"
    }
  }
}
